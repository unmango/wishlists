{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>UnstoppableMango/renovate-config"
  ],
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
